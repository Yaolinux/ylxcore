version=6.3
source=(ftp://invisible-island.net/ncurses/ncurses-$version.tar.gz)

do_build() {
cd ncurses-$version

sed -i s/mawk// configure

./configure --prefix=/tools --with-shared \
 --without-debug --without-ada --enable-widec  \
 --enable-overwrite
	
make	
make install

ln -s libncursesw.so /tools/lib/libncurses.so
}
