name=expect
version=5.45.4
source=(https://prdownloads.sourceforge.net/expect/expect5.45.4.tar.gz)

do_build() {
	cd expect-$version

	./configure --prefix=/usr           \
            --with-tcl=/usr/lib     \
            --enable-shared         \
            --mandir=/usr/share/man \
            --with-tclinclude=/usr/include
	
	make
	make install
	ln -svf expect5.45.4/libexpect5.45.4.so /usr/lib
}
