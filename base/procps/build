name=procps
version=3.3.17
source=(https://sourceforge.net/projects/procps-ng/files/Production/procps-ng-3.3.17.tar.xz)

do_build() {
	cd procps-$version

	./configure --prefix=/usr                            \
            --docdir=/usr/share/doc/procps-ng-3.3.17 \
            --disable-static                         \
            --disable-kill                           \
            --with-systemd

	make
	make install

}
